<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_blue"
    android:padding="16dp"
    tools:context=".Activities.EditProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/konkhmer_sleokchher"
                android:text="Edit Profile"
                android:textSize="34sp"
                android:textColor="@color/fun_orange"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="Profile Picture"
                android:src="@drawable/white_circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textColor="@color/deep_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/email_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="example@domain.com"
                    android:textColor="@color/deep_blue"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/email_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="example@domain.com"
                    android:textColor="@color/deep_blue"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:id="@+id/email_edit_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Edit Email"
                    android:src="@drawable/baseline_edit_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username:"
                    android:textColor="@color/deep_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/username_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Username"
                    android:textColor="@color/deep_blue"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/username_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enter Username"
                    android:textColor="@color/deep_blue"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:id="@+id/username_edit_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Edit Username"
                    android:src="@drawable/baseline_edit_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/fencing_radius_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fencing Radius: 1000m"
                android:textColor="@color/deep_blue"
                android:textSize="16sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/fencing_radius_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:valueFrom="0"
                android:valueTo="1000"
                android:stepSize="1" />

            <TextView
                android:id="@+id/scan_radius_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Scan Radius: 500m"
                android:textColor="@color/deep_blue"
                android:textSize="16sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/scan_radius_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:valueFrom="0"
                android:valueTo="1000"
                android:stepSize="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B6B6B6"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/amazing_green"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
